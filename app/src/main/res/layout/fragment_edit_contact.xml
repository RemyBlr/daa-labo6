<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_gui"
    tools:context=".fragments.EditContactFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/edit_contact_title"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/fragment_detail_title_new"
            android:layout_marginBottom="@dimen/edit_item_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/label_name"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_name_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_name"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/fragment_name_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_name"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Firstanme -->
        <TextView
            android:id="@+id/label_firstname"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_firstname_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_firstname"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/fragment_firstname_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_firstname"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- E-mail -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_email_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_firstname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_email"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/fragment_email_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_email"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Address -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_address_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_address"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/fragment_address_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_address"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Zip code -->
        <TextView
            android:id="@+id/label_zip"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_zip_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_zip"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/fragment_zip_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_zip"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- City -->
        <TextView
            android:id="@+id/label_city"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_city_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_zip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_city"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/fragment_city_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_city"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone type -->
        <TextView
            android:id="@+id/label_phone_type"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_phonetype_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <RadioGroup
            android:id="@+id/edit_contact_phone_type"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/label_phone_type"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radio_btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_phonetype_home" />

            <RadioButton
                android:id="@+id/radio_btn_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_phonetype_office" />

            <RadioButton
                android:id="@+id/radio_btn_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_phonetype_mobile" />

            <RadioButton
                android:id="@+id/radio_btn_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_phonetype_fax" />

        </RadioGroup>

        <!-- Phone nbr -->
        <TextView
            android:id="@+id/label_phone_number"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:text="@string/fragment_phonenumber_subtitle"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/edit_item_padding"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_phone_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline" />

        <EditText
            android:id="@+id/edit_contact_phone_number"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/fragment_phonenumber_subtitle"
            app:layout_constraintBaseline_toBaselineOf="@id/label_phone_number"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Align labels to guideline -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="@dimen/no_space"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/edit_contact_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/edit_contact_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fragment_btn_cancel"/>

            <Button
                android:id="@+id/edit_contact_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fragment_btn_delete"
                android:layout_marginStart="8dp"
                android:drawableEnd="@android:drawable/ic_menu_delete" />

            <Button
                android:id="@+id/edit_contact_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fragment_btn_save"
                android:layout_marginStart="8dp"
                android:drawableEnd="@android:drawable/ic_menu_save"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>